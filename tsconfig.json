{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["./*", "node_modules/*"],
      "@tests": [ "tests/*" ],
      "@components/*": [ "src/components/*" ],
      "constants/*": [ "src/constants/*" ],
      "@assets/*": [ "assets/*" ]
    },
  },
  "exclude": [
    "node_modules",
    "build",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}